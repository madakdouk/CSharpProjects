@using Newsletter.ViewModels
@model List<SignupVM>

<div class="row g-0 m-3">
    <div class="card border-dark col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header border-primary text-center">
            <h5 class="m-0">Sign-ups</h5>
        </div>
        <div class="card-body mx-0">
            @foreach (var signup in Model)
            {
                using (Html.BeginForm("Unsubcribe", "Admin", FormMethod.Post))
                {
                    <div class="row mb-3">
                        <div class="col">@signup.FirstName</div>
                        <div class="col">@signup.LastName</div>
                        <div class="col">@signup.EmailAddress</div>
                        <div class="col">
                            <button type="submit" class="btn btn-danger btn-block">Unsubscribe</button>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>